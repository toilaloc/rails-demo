<% if @category.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@category.errors.count, "error") %> prohibited this article from being saved:</h2>

    <ul>
      <% @category.errors.each do |error, message| %>
        <li><%= error %>: <%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for [:admin, @category], html: {class: "form"}  do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", placeholder: "Category Name" %>
  </div>
    <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: "form-control", placeholder: "Category Description" %>
    </div>
  <div class="form-group">
  <%= f.label :categories_parent %>
    <%= f.select :parent_id, @categories_parent.collect {|c| [ c.name, c.id ] }, :include_blank => "Nothing selected" %>
  </div>
  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>