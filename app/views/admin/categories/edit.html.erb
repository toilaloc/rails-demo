<%= form_for [:admin, @category], html: {class: "form"}  do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
      <div class="form-group">
      <%= f.label :description %>
      <%= f.text_field :description, class: "form-control" %>
      </div>
    <div class="form-group">
    <%= f.label :categories_parent %>
    
    <select name="category[parent_id]" id="category_parent_id">
    <option value="">Nothing selected</option>
    <% @categories_parent.each do |category| %>
        
    <option value="<%= category.id %>" <% if category.id == @category.id %> selected <% end %>><%= category.name %></option>
    <% end %>
    </div>
    <%= f.submit "Update", class: "btn btn-primary" %>
  <% end %>