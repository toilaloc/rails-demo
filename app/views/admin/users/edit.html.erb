<div class="row">
  <div class="col-lg-12 form-group">
    <%= form_for [:admin, @user], html: {class: "form-horizontal"} do |f| %>
        
        <div class="form-group">
        <%= f.label :username, "Userame", class: "col-md-2 control-label" %>
        <div class="col-md-6">
            <%= f.text_field :username, class: "form-control" %>
        </div>
        </div>
        
        <div class="form-group">
        <%= f.label :fullname, "Fullname", class: "col-md-2 control-label" %>
        <div class="col-md-6">
            <%= f.text_field :fullname, class: "form-control" %>
        </div>
        </div>
        
        <div class="form-group">
        <%= f.label :email, "Email", class: "col-md-2 control-label" %>
        <div class="col-md-6">
            <%= f.text_field :email, class: "form-control" %>
        </div>
        </div>

        <div class="form-group">
        <%= f.label :address, "Address", class: "col-md-2 control-label" %>
        <div class="col-md-6">
            <%= f.text_field :address, class: "form-control" %>
        </div>
        </div>

        <div class="form-group">
        <%= f.label :avatar, "Avatar", class: "col-md-2 control-label" %>
        <div class="col-md-6">
            <%= f.text_field :avatar, class: "form-control" %>
        </div>
        </div>

        <div class="form-group">
        <%= f.label :role_id, "Role ID", class: "col-md-2 control-label" %>
        <div class="col-md-6">
            <%= f.text_field :role_id, class: "form-control" %>
        </div>
        </div>

        <div class="form-group">
        <div class="col-lg-offset-4">
            <%= f.submit "Update", class: "btn btn-success" %>
        </div>
        </div>
    <% end %>
  </div>
</div>