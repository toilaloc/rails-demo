<div class="row">
  <div class="col-lg-12 form-group">
    <%= form_for [:admin, @user], html: {class: "form-horizontal"} do |f| %>
        
        <div class="form-group">
        <%= f.label :username, "Userame", class: "col-md-2 control-label" %>
        <div class="col-md-6">
            <%= f.text_field :username, class: "form-control", placeholder: "Enter user name" %>
        </div>
        </div>
        
        <div class="form-group">
        <%= f.label :fullname, "Fullname", class: "col-md-2 control-label" %>
        <div class="col-md-6">
            <%= f.text_field :fullname, class: "form-control", placeholder: "Enter full name" %>
        </div>
        </div>
        
        <div class="form-group">
        <%= f.label :password, "Password", class: "col-md-2 control-label" %>
        <div class="col-md-6">
            <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
        </div>
        </div>
        
        <div class="form-group">
        <%= f.label :password_confirmation, "Password Confirmation", class: "col-md-2 control-label" %>
        <div class="col-md-6">
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Enter password confirmation" %>
        </div>
        </div>
        
        <div class="form-group">
        <%= f.label :email, "Email", class: "col-md-2 control-label" %>
        <div class="col-md-6">
            <%= f.text_field :email, class: "form-control", placeholder: "Enter your email" %>
        </div>
        </div>

        <div class="form-group">
        <%= f.label :address, "Address", class: "col-md-2 control-label" %>
        <div class="col-md-6">
            <%= f.text_field :address, class: "form-control", placeholder: "Enter your address" %>
        </div>
        </div>

        <div class="form-group">
        <%= f.label :avatar, "Avatar", class: "col-md-2 control-label" %>
        <div class="col-md-6">
            <%= f.text_field :avatar, class: "form-control", placeholder: "Enter your avatar" %>
        </div>
        </div>

        <div class="form-group">
        <div class="col-lg-offset-4">
            <%= f.submit "Register", class: "btn btn-success" %>
        </div>
        </div>
    <% end %>
  </div>
</div>